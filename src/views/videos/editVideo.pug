extends ../layouts/main.pug

block content
    .form-container 
        form(action=`${routes.editVideo(video.id)}`, method="post")
            input(type="text", placeholder="Title", name="title", value=video.title, required=true)
            textarea(placeholder="Description", name="description", required=true)=video.description
            input(type="submit", value="Update Video")                          
        a.form-container__link.form-contatiner__link--delete(href=`${routes.deleteVideo(video.id)}`) Delete Video